@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

' Контекстная диаграмма
LAYOUT_TOP_DOWN()
title Система менеджмента техники

Person(user, "Рядовой пользователь", "Пользователь системы для получения информации о технике и задачах")
Person(admin, "Администратор", "Управляет техникой, задачами и пользователями")
Person(carrier, "Исполнитель (носящий)", "Получает задачи на перемещение техники")

System(system, "Система менеджмента техники", "Микросервисная архитектура на Go", "Обрабатывает информацию о технике, задачах и исполнителях")

Rel(user, system, "Использует для получения информации")
Rel(admin, system, "Управляет техникой и задачами")
Rel(carrier, system, "Получает задачи на перемещение техники")

@enduml